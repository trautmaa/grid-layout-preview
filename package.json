{
	"name": "react-grid-layout-svg",
	"version": "1.0.0",
	"description": "An SVG renderer for the react-grid-layout library",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"files": [ "lib/**/*" ],
	"scripts": {
		"test": "jest --config jestconfig.json",
		"build": "tsc",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"lint": "tslint -p tsconfig.json",
		"prepare": "yarn build",
		"prepublishOnly": "yarn test && yarn lint",
		"preversion": "yarn lint",
		"version": "yarn format && git add -A src",
		"postversion": "git push && git push --tags"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/trautmaa/react-grid-layout-svg.git"
	},
	"keywords": [ "react", "grid", "layout", "svg" ],
	"author": "Alex Trautman",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/trautmaa/react-grid-layout-svg/issues"
	},
	"homepage": "https://github.com/trautmaa/react-grid-layout-svg#readme",
	"devDependencies": {
		"@types/jest": "^25.1.3",
		"jest": "^25.1.0",
		"prettier": "^1.19.1",
		"ts-jest": "^25.2.1",
		"tslint": "^6.0.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.8.3"
	}
}
